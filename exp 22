# install.packages("abind") type this in the console.
library(abind)

# Creating three sample arrays
array1 <- array(1:9, dim = c(3, 3))
array2 <- array(10:18, dim = c(3, 3))
array3 <- array(19:27, dim = c(3, 3))

# Combining arrays by rows
combined_array <- abind(array1, array2, array3, along = 1)

# Print the combined array
print(combined_array)

